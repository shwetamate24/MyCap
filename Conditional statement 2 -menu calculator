#include <stdio.h>
int main()
{
int food;
int qua, rat,tot;
    printf("ENTER YOUR CHOICE:\n1.Pizza \trate:239\n2.Sandwich\trate:149 \n3.Burger\trate:129 \n4.Pasta \trate:179\n5.French Fries\trate:99\n");
     scanf("%d",&food);
    switch(food)
    {case 1: printf("YOU HAVE SELECTED PIZZA\n");
               printf("ENTER QUANTITY:");
               scanf("%d",&qua);
               rat=239;
               tot=qua*rat;
               printf("TOTAL:%d",tot);
    break;
    case 2: printf ("YOU HAVE SELECTED SANDWICH\n");
              printf("ENTER QUANTITY:");
                  scanf("%d",&qua);
                   rat=149;
                      tot=qua*rat;
               printf("TOTAL:%d",tot);
    break;
    case 3:printf ("YOU HAVE SELECTED BURGER\n");
             printf("ENTER QUANTITY:");
                 scanf("%d",&qua);
                  rat=129;
                     tot=qua*rat;
               printf("TOTAL:%d",tot);
    break;
     case 4:printf ("YOU HAVE SELECTED PASTA \n");
             printf("ENTER QUANTITY:");
                 scanf("%d",&qua);
                  rat=179;
                     tot=qua*rat;
               printf("TOTAL:%d",tot);
    break;
      case 5:printf ("YOU HAVE SELECTED FRENCH FRIES \n");
             printf("ENTER QUANTITY:");
                 scanf("%d",&qua);
                  rat=99;
                     tot=qua*rat;
               printf("TOTAL:%d",tot);
    break;
    default: printf("\n***UNAVAILABLE***");}
